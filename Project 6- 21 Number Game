def play_21_game():
    print("Let's start the game")
    choice= input('What you want to do?, lose or win = ').strip().lower()
    while choice not in ['lose', 'win']:
        choice= input('What you want to do?, lose or win = ').strip().lower()
    total= 0
    while total<21:
        try:
            num = int (input('Choose one number from 1,2,3: '))
        except ValueError:
            print ('Enter valid input just like 1,2,3') 
            continue   
        if num not in [1,2,3]:
            print ('Invalid Input, takes only 1,2,3')
            continue
        total+=num
        print (f'You choose {num}, Now total is {total}')
        if total>=21:
            if choice == 'lose':
                print ('Target is 21, you lose!')
            else:
                print ('Target is 21, you win')
                break
        computer= 4-num
        total+=computer
        print (f'Computer enters {computer}, Now total is {total}')
        if total >= 21:
            if choice == "lose":
                print("ðŸŽ‰ Computer reached 21. You win!")
            else:
                print("ðŸ˜¢ Computer reached 21. You lose!")
                break
    print ('Game Over!')
play_21_game()
